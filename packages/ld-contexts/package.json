{
	"name": "@twin.org/ld-contexts",
	"version": "0.0.1-next.1",
	"description": "LD Contexts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twinfoundation/schema.git/ld-contexts"
	},
	"author": "jose.cantera@iota.org",
	"license": "Apache-2.0",
	"scripts": {
		"format": "prettier --write .",
		"lint:format": "prettier --config .prettierrc --check .",
		"lint:markdown": "markdownlint **/*.md --ignore **/node_modules/** --ignore **/docs/reference/**",
		"lint:spell": "cspell ** --no-progress",
		"lint": "npm run lint:format && npm run lint:markdown && npm run lint:spell",
		"clean": "rimraf dist coverage",
		"build": "tsc",
		"bundle:esm": "rollup --config rollup.config.mjs --environment MODULE:esm",
		"bundle:cjs": "rollup --config rollup.config.mjs --environment MODULE:cjs",
		"bundle": "npm run bundle:esm && npm run bundle:cjs",
		"dist": "npm run clean && npm run build && npm run bundle"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"devDependencies": {
		"@twin.org/nameof-transformer": "next",
		"@types/node": "^22.13.13",
		"cspell": "8.14.4",
		"markdownlint-cli": "0.41.0",
		"prettier": "^3.3.3",
		"rimraf": "6.0.1",
		"rollup": "4.34.9",
		"ts-patch": "3.3.0",
		"typescript": "5.8.2"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.mjs",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.mjs"
		}
	},
	"files": [
		"dist/cjs",
		"dist/esm",
		"dist/types"
	]
}
